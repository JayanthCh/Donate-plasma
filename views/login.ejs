<%- include("partials/header"); -%>

<form class="form-signin" action="/login" method="post">
  <h1 class="h3 mb-3 font-weight-normal" style="text-align:center;padding:0">Login</h1>
  <label for="inputEmail" class="sr-only" >Email address</label>
  <input type="email" id="inputEmail" name="username" class="form-control" placeholder="Email address" required autofocus>
  <label for="inputPassword" class="sr-only">Password</label>
  <input style="margin-bottom:0;" type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>

  <div class="exist" style="color:gray; text-align:right; margin-bottom:5px ;padding:0">
  <a style="color:#ccc;" href="/register">Forget password?</a>
  </div>



  <button class="btn btn-lg r-button btn-block" type="submit">Sumbit</button>


</form>


<div class="card-body">
  <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
    <i class="fab fa-google"></i>
    Login with Google
  </a>
</div>
<div class="card-body">
  <a class="btn btn-block btn-social btn-facebook" href="/auth/facebook" role="button">
    <i class="fab fa-facebook"></i>
    Login with Facebook
  </a>
</div>

<%- include("partials/footer"); -%>
